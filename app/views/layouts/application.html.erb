<!DOCTYPE html>
<html class='container'>
  <head>
    <title>Jobs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'bootstrap.min.css', media: :all %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>
  </head>

  <body class='container'>
    <%= render 'shared/header' %>
    <%= yield %>
  </body>
</html>
