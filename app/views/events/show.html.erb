<div>
  <h3>Event: <%= @event.id %></h3>
  <br/>
  <div>
    Code: <%= @event.code %>
    <br/>
    Name: <%= @event.name %>
    <br/>
    Status: <%= @event.status %>
    <br/>
    Created at: <%= @event.created_at.strftime('%Y-%M-%d %H:%m:%S') %>
  </div>
  <% schedules = @event.schedules %>
  <% if schedules.present? %>
    <h3>List of schedules</h3>
    <table class='table table-bordered'>
      <thead>
        <tr class='row'>
          <td>ID</td>
          <td>Cron Schedule</td>
          <td>Job</td>
          <td>Status</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% schedules.each do |schedule| %>
          <tr class='row'>ex
            <td><%= schedule.id %></td>
            <td><%= schedule.cron_schedule %></td>
            <td><%= schedule.job %></td>
            <td><%= schedule.status %></td>
            <td><%= link_to 'Show', schedule_path(schedule) %></td>
            <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
            <td><%= link_to (schedule.active? ? 'Deactivate' : 'Activate'), toggle_status_schedule_path(schedule) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

</div>